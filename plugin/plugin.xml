<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.holmconsulting.ftp.server.plugin.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.holmconsulting.ftp.server.plugin.editors.AsciFileEditor"
            extensions="txt"
            icon="icons/ftpServerLogo.png"
            id="com.holmconsulting.ftp.server.plugin.editors.AsciFileEditor"
            name="%editor.name">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="com.holmconsulting.plugin.ftp.server.views.FTPServerView"
               relationship="stack"
               relative="org.eclipse.ui.views.ProblemView"
               visible="true">
         </view>
          <viewShortcut
               id="com.holmconsulting.plugin.ftp.server.views.FTPServerView">
         </viewShortcut>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.holmconsulting.ftp.server.plugin.preferences.PreferencePage"
            id="com.holmconsulting.ftp.server.plugin.preferences.PreferencePage"
            name="%page.name">
      </page>
   </extension>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="%category.name"
            id="com.holmconsulting.ftp.serve.plguin.views">
      </category>
      <view
            name="%view.name"
            icon="icons/ftpServerLogo.png"
            category="com.holmconsulting.ftp.serve.plguin.views"
            class="com.holmconsulting.ftp.server.plugin.views.FTPServerView"
            id="com.holmconsulting.plugin.ftp.server.views.FTPServerView">
      </view>
   </extension>
   
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   
    <extension
         point="org.eclipse.ui.startup">
      <startup></startup>
   </extension>
    <extension
          point="org.eclipse.ui.commands">
       <command
             id="com.holmconsulting.ftp.server.plugin.command.delete"
             name="DeleteFile">
       </command>
    </extension>
    <extension
          point="org.eclipse.ui.handlers">
       <handler
             class="com.holmconsulting.ftp.server.plugin.commands.DeleteFile"
             commandId="com.holmconsulting.ftp.server.plugin.command.delete">
       </handler>
    </extension>
    <extension
          point="org.eclipse.ui.menus">
       <menuContribution
             allPopups="false"
             locationURI="popup:com.holmconsulting.ftp.server.plugin.views.FTPServerView">
          <separator
                name="com.holmconsulting.ftp.server.plugin.separator1"
                visible="true">
          </separator>
          <command
                commandId="com.holmconsulting.ftp.server.plugin.command.delete"
                label="Delete File"
                icon="icons/delete.gif"
                style="push">
          </command>
       </menuContribution>
       <menuContribution
             allPopups="false"
             locationURI="toolbar:com.holmconsulting.ftp.server.plugin.views.FTPServerView">
          <separator
                name="com.holmconsulting.ftp.server.plugin.separator2">
          </separator>
          <command
                commandId="com.holmconsulting.ftp.server.plugin.command.delete"
                label="Delete File"
                icon="icons/delete.gif"
                style="push">
          </command>
       </menuContribution>
    </extension>
    
      <extension
         point="org.eclipse.help.toc">
        <toc
            file="toc.xml" primary="true">
      </toc>
   </extension>

</plugin>
